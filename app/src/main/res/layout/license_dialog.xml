<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="35dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="License Registration"
        android:id="@+id/tvTitle"
        android:textSize="25sp"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userid@gmail.com"
        android:textSize="20sp"
        android:id="@+id/tvGmail"
        android:layout_below="@id/tvTitle"
        android:padding="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etKeyInput"
        android:hint="Insert Your Key Here..."
        android:layout_below="@id/tvGmail"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLicense"
        android:text="라이센스 등록을 하시게 되면 PLUG VR 이용약관에 동의하시게 됩니다."
        android:padding="5dp"
        android:layout_below="@id/etKeyInput"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@color/plugVRSilver"
        android:id="@+id/imageLogoSmall"
        android:layout_below="@id/tvLicense"
        android:padding="5dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/btnSubmit"
        android:text="Submit"
        android:layout_below="@id/tvLicense"
        android:layout_alignParentEnd="true"
        />



</RelativeLayout>